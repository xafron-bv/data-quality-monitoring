[flake8]
max-line-length = 120
exclude = 
    .git,
    __pycache__,
    venv,
    .venv,
    build,
    dist,
    *.egg-info,
    .cursor
ignore = 
    # E501: line too long (handled by max-line-length)
    E501,
    # W503: line break before binary operator (conflicts with W504)
    W503,
    # E203: whitespace before ':' (conflicts with black formatter)
    E203
per-file-ignores =
    # Allow unused imports in __init__ files
    __init__.py:F401
    # Allow star imports in __init__ files  
    __init__.py:F403