[flake8]
max-line-length = 120
exclude = 
    .git,
    __pycache__,
    venv,
    .venv,
    build,
    dist,
    *.egg-info,
    .cursor
ignore = 
    # E501: line too long (handled by max-line-length)
    E501,
    # W503: line break before binary operator (conflicts with W504)
    W503,
    # E203: whitespace before ':' (conflicts with black formatter)
    E203,
    # E402: module level import not at top of file (needed for sys.path.append)
    E402,
    # F401: imported but unused (too many false positives)
    F401,
    # E128: continuation line under-indented for visual indent
    E128,
    # F541: f-string is missing placeholders (intentional in logging)
    F541,
    # E302: expected 2 blank lines, found 1
    E302,
    # E305: expected 2 blank lines after class or function definition
    E305,
    # F841: local variable assigned but never used
    F841,
    # E226: missing whitespace around arithmetic operator
    E226,
    # E722: do not use bare except (sometimes needed)
    E722,
    # W504: line break after binary operator
    W504,
    # E111, E114, E117, E121, E126, E129: various indentation issues
    E111,
    E114,
    E117,
    E121,
    E126,
    E129,
    # E201: whitespace after '('
    E201,
    # E231: missing whitespace after ','
    E231,
    # E702: multiple statements on one line
    E702
per-file-ignores =
    # Allow unused imports in __init__ files
    __init__.py:F401
    # Allow star imports in __init__ files  
    __init__.py:F403
    # Allow redefinitions in certain files
    anomaly_detectors/ml_based/index.py:F811
    anomaly_detectors/ml_based/ml_anomaly_detector.py:F811
    anomaly_detectors/ml_based/hyperparameter_search.py:F821
    anomaly_detectors/ml_based/model_training.py:F821
    common/comprehensive_detector.py:F821
    multi_sample_evaluation/unified_detection_interface.py:F821,F811