{
  "field_name": "category",
  "description": "Anomaly injection rules for product categories - injects completely wrong domain categories",
  "anomaly_rules": [
    {
      "rule_name": "inject_technical_categories",
      "description": "Replace fashion categories with technical/engineering items",
      "operation": "value_replacement",
      "probability": 0.3,
      "params": {
        "replacement_values": [
          "Nuclear Reactor",
          "Quantum Computer",
          "Space Shuttle",
          "Submarine Engine",
          "Satellite Dish",
          "Robotic Arm",
          "Laser Cutter",
          "3D Printer",
          "Circuit Board",
          "Microprocessor"
        ]
      }
    },
    {
      "rule_name": "inject_abstract_concepts",
      "description": "Replace with abstract philosophical concepts",
      "operation": "value_replacement",
      "probability": 0.2,
      "params": {
        "replacement_values": [
          "Existential Dread",
          "Quantum Entanglement",
          "Consciousness",
          "Time Dilation",
          "Parallel Universe",
          "Dark Matter",
          "String Theory",
          "Black Hole",
          "Infinity",
          "Chaos Theory"
        ]
      }
    },
    {
      "rule_name": "inject_nonsense_words",
      "description": "Replace with completely nonsensical words",
      "operation": "value_replacement",
      "probability": 0.2,
      "params": {
        "replacement_values": [
          "Xylophonic",
          "Quizzicality",
          "Bamboozlement",
          "Flabbergasted",
          "Serendipitous",
          "Pandemonium",
          "Labyrinthine",
          "Ephemeral",
          "Mellifluous",
          "Sesquipedalian"
        ]
      }
    },
    {
      "rule_name": "inject_numbers_and_symbols",
      "description": "Replace with random numbers and symbols",
      "operation": "value_replacement",
      "probability": 0.15,
      "params": {
        "replacement_values": [
          "12345",
          "!@#$%",
          "ABCDEF",
          "999999",
          "XYZ123",
          "###",
          "*****",
          "00000",
          "&&&&&",
          "?????"
        ]
      }
    },
    {
      "rule_name": "inject_foreign_languages",
      "description": "Replace with words from different languages",
      "operation": "value_replacement",
      "probability": 0.15,
      "params": {
        "replacement_values": [
          "Bonjour",
          "Hola",
          "Ciao",
          "Guten Tag",
          "Konichiwa",
          "Namaste",
          "Shalom",
          "Merhaba",
          "Ni Hao",
          "Salaam"
        ]
      }
    }
  ]
}
